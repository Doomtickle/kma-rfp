<%= simple_form_for(@proposal_request, defaults: {input_html: {class: 'form-control'}} ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <fieldset class="form-group">
        <div class="row">
            <%= f.input :clientName, label: "Client Name", wrapper_html: { class: 'col-md-4' } %>
            <%= f.input :clientIndustry, label: "Client Industry", wrapper_html: { class: 'col-md-4' }%>
            <%= f.input :campaignName, label: "Campaign Name", wrapper_html: { class: 'col-md-4' } %>
            <%= f.input :basicDescription, label: "Basic Description",  wrapper_html: { class: 'col-md-12' } %>
        </div>
    </fieldset>
    <fieldset class="form-group">
        <div class="row">
            <%= f.input :flightDateStart, label: "Flight Date Start",  wrapper_html: { class: 'col-sm-5' } %>
            <%= f.input :flightDateEnd, label: "Flight Date End",  wrapper_html: { class: 'col-sm-5' } %>
            <%= f.input :staggered, label: "Staggered?", as: :boolean,  wrapper_html: { class: 'col-sm-2' } %>
        </div>
    </fieldset>
    <fieldset class="form-group">
        <div class="row">
            <%= f.input :goalsAndObjectives, label: "Goals and Objectives",  wrapper_html: { class: 'col-sm-10' } %>
            <%= f.input :budget, label: "Overall Budget",  wrapper_html: { class: 'col-sm-2' } %>
        </div>
    </fieldset>
    <fieldset clss="form-group">
        <div class="row">
            <%= f.input :targeting, :collection ["Text", "Display", "Video", "Geo-Fencing"], :as => :check_boxes, wrapper_html: { class: 'col-sm-8' } %>
            <%= f.input :geography, wrapper_html: { class: 'col-sm-3' } %>
            <%= f.input :ageGroup, label: "Age Group",  wrapper_html: { class: 'col-sm-3' } %>
            <%= f.input :gender, wrapper_html: { class: 'col-sm-3' } %>
            <%= f.input :househouldIncome, label: "Household Income", wrapper_html: { class: 'col-sm-8' } %>
            <%= f.input :interest, label: "Interests", wrapper_html: { class: 'col-sm-8' } %>
            <%= f.input :device, label: "Devices",  wrapper_html: { class: 'col-sm-8' }%>
            <%= f.input :creativeAdUnits, label: "Creative Ad Units",  wrapper_html: { class: 'col-sm-8' } %>
        </div>
    </fieldset>
    <fieldset class="form-group">
        <div class="row">
            <%= f.input :dayParting, label: "Day Parting",  wrapper_html: { class: 'col-sm-2' } %>
            <%= f.input :successMetrics, label: "Success Metrics",  wrapper_html: { class: 'col-sm-10' } %>
            <%= f.input :specification, label: "Specifications",  wrapper_html: { class: 'col-sm-6' } %>
            <%= f.input :insertionOrderTerms, label: "Insertion Order Terms",  wrapper_html: { class: 'col-sm-6' } %>
            <%= f.input :submissionInstructions, label: "Submission Instructions",  wrapper_html: { class: 'col-sm-122' } %>
            <%= f.input :proposalDue, label: "Proposal Due Date",  wrapper_html: { class: 'col-sm-6' } %>
            <%= f.input :decisionMadeBy, label: "Decision Made By",  wrapper_html: { class: 'col-sm-6' } %>
            <%= f.input :selectionCriteria, label: "Selection Criteria",  wrapper_html: { class: 'col-sm-12' } %>
        </div>
    </fieldset>
  </div>

  <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
